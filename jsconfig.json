{
  "compilerOptions": {
    "target": "es6",
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@": ["./src/"],
      "@/*": ["./src/*"],
      "@component/*": ["./src/components/*"],
      "@container/*": ["./src/containers/*"],
      "@module/*": ["./src/modules/*"],
      "@screen/*": ["./src/screens/*"],
      "@core/*": ["./src/core/*"],
      "@api/*": ["./src/core/api/*"],
      "@styles/*": ["./src/styles/*"],
      "@util/*": ["./src/utils/*"],
      "@store/*": ["./src/core/store/*"],
      "@theme/*": ["./src/theme/*"],
      "@assets/*": ["./src/assets/*"]
    }
  },
  "include": [
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}